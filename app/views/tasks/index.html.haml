.container
  %h1 My tasks
  %dl
    - @tasks.each do |task|
      %dt
        - if task.completed
          %i.fas.fa-check-square
        - else
          %i.fas.fa-square
        = link_to task.title, task_path(task)
        = link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do
          %i.fas.fa-trash


  = link_to 'New task', new_task_path, class: 'btn'
